<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.example.user.traveleasy.MainActivity"

    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-6dp">

        <ImageView
            android:id="@+id/traveleasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/traveleasy" />

        <Button
            android:id="@+id/activeTripsBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/main_btn_bg"
            android:elevation="0dp"
            android:onClick="activeTrips"
            android:shadowColor="@android:color/darker_gray"
            android:text="Active trips"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"

            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/newTripBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/main_btn_bg"
            android:onClick="addTrip"
            android:text="New trip"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recentTripsBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/main_btn_bg"
            android:onClick="showTrips"
            android:text="Recent trips"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
