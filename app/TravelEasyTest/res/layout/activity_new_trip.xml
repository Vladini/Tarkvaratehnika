<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context="com.example.user.traveleasy.NewTripActivity">


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="9dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Trip name"
                android:inputType="textPersonName"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText7"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Start date (dd.mm.yyyy)"
                android:inputType="date"
                android:textColorHint="@android:color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText8"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="End date (dd.mm.yyyy)"
                android:inputType="date"
                android:textColorHint="@android:color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button3"
                android:onClick="saveTrip"
                android:text="Save trip"
                android:layout_width="343dp"
                android:layout_height="80dp"
                android:accessibilityLiveRegion="none"
                android:backgroundTint="@color/HintFontColor"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_marginTop="10dp"
                android:layout_weight="0.06"
                android:onClick="insertBudget"
                android:text="Insert budget"
                android:visibility="visible"
                android:layout_width="343dp"
                android:layout_height="80dp"
                android:accessibilityLiveRegion="none"
                android:background="@android:color/darker_gray"
                android:backgroundTint="@color/HintFontColor"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="113dp"/>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Budget"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button2"
                android:onClick="insertExpenses"
                android:text="Insert expenses"
                android:textColorHint="@android:color/white"
                android:visibility="invisible"
                android:layout_width="343dp"
                android:layout_height="80dp"
                android:accessibilityLiveRegion="none"
                android:background="@android:color/darker_gray"
                android:backgroundTint="@color/HintFontColor"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="113dp"/>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Hotel"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/white"
                android:visibility="invisible"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tickets"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/white"
                android:visibility="invisible"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="343dp"
                android:layout_height="80dp"
                android:accessibilityLiveRegion="none"
                android:background="@android:color/darker_gray"
                android:backgroundTint="@color/HintFontColor"
                android:onClick="checkBudget"
                android:text="Check budget"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="113dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
