<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.example.vlad.traveleasytest.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/activeTripsBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/main_btn_bg"
            android:elevation="0dp"
            android:onClick="activeTrips"
            android:shadowColor="@android:color/darker_gray"
            android:text="Active trips"
            android:textColor="@android:color/background_light"
            android:textSize="33sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/newTripBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_btn_bg"
            android:onClick="addTrip"
            android:text="New trip"
            android:textColor="@android:color/background_light"
            android:textSize="33sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recentTripsBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_btn_bg"
            android:onClick="showTrips"
            android:text="Recent trips"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="33sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
