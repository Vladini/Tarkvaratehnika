<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context="com.example.user.traveleasy.MainActivity"

    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:srcCompat="@drawable/main5"
        tools:layout_editor_absoluteY="-56dp"
        tools:layout_editor_absoluteX="0dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#addedd"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="298dp">


        <Button
            android:id="@+id/newTripBtn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:accessibilityLiveRegion="none"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/HintFontColor"
            android:onClick="addTrip"
            android:text="new trip"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="113dp" />

        <Button
            android:id="@+id/activeTripsBtn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:background="?android:attr/colorAccent"
            android:backgroundTint="@color/HintFontColor"
            android:onClick="activeTrips"
            android:text="Active Trips"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/recentTripsBtn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/HintFontColor"
            android:onClick="showTrips"
            android:text="recent trips"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
